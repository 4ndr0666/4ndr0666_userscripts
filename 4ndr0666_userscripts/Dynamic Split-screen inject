// ==UserScript==
// @name         Custom Style Injector for chat.openai.com
// @namespace    http://tampermonkey.net/
// @version      0.1
// @description  Inject custom style into chat.openai.com
// @author       You
// @match        *://chat.openai.com/*
// @grant        GM_addStyle
// @grant        GM_getResourceText
// @grant        GM_xmlhttpRequest
// ==/UserScript==

(function() {
    'use strict';

    // URL of the custom CSS file
    const customStyleUrl = 'https://raw.githubusercontent.com/4ndr0666/4ndr0666_userscripts/main/Css/gpt.css';

    // Function to add the custom style to the page
    function addCustomStyle(styleString) {
        GM_addStyle(styleString);
    }

    // Fetch and apply the custom style
    GM_xmlhttpRequest({
        method: 'GET',
        url: customStyleUrl,
        onload: function(response) {
            addCustomStyle(response.responseText);
        }
    });
})();
